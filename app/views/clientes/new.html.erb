
<div class ="container">
<div class ="col-md-5">
  <div class="form-area">
  <h1>Registrar nuevo cliente</h1>
  <%= form_for @cliente do |f| %>
      <% if @cliente.errors.any? %>
        <div id="error_explanation" class = "row">
          <h2><%= pluralize(@cliente.errors.count, "errores") %> prohibieron la creación de este cliente:</h2>

          <ul>
          <% @cliente.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%# f.label :rut%>
        <%= f.text_field :rut , class:"form-control" , placeholder:"Rut(Sin puntos)"%>
      </div>
      <div>
        <%# f.label :nombres%>
        <%= f.text_field :nombres , class:"form-control" , placeholder:"Nombres"%>
      </div>
      <div>
        <%# f.label :direcion%>
        <%= f.text_field :direccion, class:"form-control" , placeholder:"Dirección" %>
      </div>
      <div>
        <%# f.label :ciudad%>
        <%= f.text_field :ciudad, class:"form-control" , placeholder:"Ciudad" %>
      </div>
      <div>
        <%# f.label :comuna%>
        <%= f.text_field :comuna, class:"form-control" , placeholder:"Comuna" %>
      </div>
      <div>
        <%# f.label :telefono%>
        <%= f.text_field :telefono, class:"form-control" , placeholder:"Telefono" %>
      </div>
      <div>
        <%# f.label :fax%>
        <%= f.text_field :fax, class:"form-control" , placeholder:"Fax" %>
      </div>
      <div>
        <%# f.label :email%>
        <%= f.text_field :email, class:"form-control" , placeholder:"E-mail" %>
      </div>
      <%= f.submit "Guardar", class:"btn btn-primary pull-right"%>
  <%end %>
  <%= link_to "Volver", '/home', class:"btn btn-default pull-left"%>
  </div>
  </div>
</div>