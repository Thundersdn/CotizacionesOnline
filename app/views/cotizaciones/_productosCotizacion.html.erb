<% @total = 0%>
<% if @prodsCot != nil && @cotizacion != nil %>
  <% @prodsCot.each do |p| %>
        <% @cantidad = @cotizacion.producto_cotizacions.find_by(:producto_id => p.id).cantidad%>
  <tr>
    <td><%=p.id%></td>
    <td><%=p.descripcion%></td>
    <td><%=p.valor_unitario%></td>
    <td><%= text_field :post, :cotizaciones, :value => @cantidad, :onkeyup => "cambiarCantidad(this,#{p.id});"%></td>
    <td><%@total += p.valor_unitario*@cantidad%><%=p.valor_unitario*@cantidad%></td>
  </tr>
  <%end%>
<%end%>
